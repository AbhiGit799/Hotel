                        <div style="text-align:left;padding: 10px;">  @Html.Label("Enter NON-AC Rooms Rate For Adult")<span>*</span></div>

                        @Html.TextBoxFor(x => x.NonAcRoomsAdultRate, null, new { maxlength = 20, @title = "Max 20 Character.", style = "background-color:white; width: 280px; border: none; height:35px;", placeholder = "Enter Detaills", required = "required" })




