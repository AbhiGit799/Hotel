@model IEnumerable<Hotel.ServiceReference1.HotelDetails>
@{
    ViewBag.Title = "DisplayHotels";
}

<h2>DisplayHotels</h2>

@using(Html.BeginForm())
{

    <table>

      
          
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.HotelId
                        </td>

                        <td>
                            @item.HotelName
                        </td>
                        <td>
                            @item.HotelAddress

                        </td>
                        


                        </tr>


                       
                }




           
    

    </table>

                }