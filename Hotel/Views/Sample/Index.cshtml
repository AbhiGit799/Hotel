<link href="~/Style/HStyle.css" rel="stylesheet" />

@using (Html.BeginForm())
{
<div class="holder">


    <table class="login_tabel" align='center'>

        <tr>
            <td colspan="2" style="text-align:center"> <span id="heading">Add Hotel Form</span></td>
        </tr>

        <tr colspan="2"style="text-align:center">
            <td>@Html.Label("Enter Hotel Name")</td>

            <td>
                @Html.TextBox("hotelname", null, new { style = "background-color:white", placeholder = "Please enter name" })
            </td>



        </tr>

        <tr>
