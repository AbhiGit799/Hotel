            <td>
                @Html.TextBox("myname", null, new { style = "background-color:white", placeholder = "Please enter name" })
            </td>

        </tr>

        <tr>
            <td>@Html.Label("Enter Hotel City")</td>

            <td>
                @Html.TextBox("myname", null, new { style = "background-color:white", placeholder = "Please enter name" })
            </td>

        </tr>

        <tr>
            <td>@Html.Label("Enter Hotel Country")</td>

            <td>
                @Html.TextBox("myname", null, new { style = "background-color:white", placeholder = "Please enter name" })
            </td>

        </tr>

        <tr>
            <td>@Html.Label("Enter Hotel Description")</td>

            <td>
                @Html.TextBox("myname", null, new { style = "background-color:white", placeholder = "Please enter name" , height="200px" })
            </td>

        </tr>

        <tr>
            <td>@Html.Label("Enter Number of Rooms")</td>

            <td>
                @Html.TextBox("myname", null, new { style = "background-color:white", placeholder = "Please enter name" })
